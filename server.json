{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.agent-polis/safe-agent",
  "description": "Delegate coding tasks to a trusted AI agent with built-in impact preview",
  "repository": {
    "url": "https://github.com/agent-polis/safe-agent",
    "source": "github"
  },
  "version": "0.4.2",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "safe-agent-cli",
      "version": "0.4.2",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "ANTHROPIC_API_KEY",
          "description": "API key for Anthropic Claude",
          "isRequired": true,
          "isSecret": true,
          "format": "string"
        }
      ]
    }
  ]
}
